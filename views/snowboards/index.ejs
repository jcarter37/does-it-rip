<%- include('../partials/header') %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Release Year</th>
      <th scope="col">Price</th>
      <th scope="col">Type</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      <% snowboards.forEach(function(s) { %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.releaseYear %></td>
          <td><%= s.price %></td>
          <td><%= s.type %></td>
          <td><a href="/snowboards/<%= s._id %>" class="btn btn-outline-info"role="button">Info</a></td>
          <td><form action="/snowboards/<%= s._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn-close" aria-label="Close"></button>
            </form></td>
        </tr>
        <% }); %>
  </tbody>
</table>

  
<%- include('../partials/footer') %>